{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "strict": true,
    "noEmitOnError": true,
    "outDir": "./public/js",
    "rootDir": "./public/ts",
    "skipLibCheck": true
  },
  "include": ["public/ts/**/*.ts"]
}
